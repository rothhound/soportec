<h1>Laboratorios</h1>

<h2>Listado</h2>
<table class="table">
  <tr>
    <th>Number</th>
    <th>Capacity</th>
    <th>Floor</th>
    <th>Numcomputers</th>
    <th>Airconditioning</th>
    <th>Projector</th>
    <th>Sound</th>
    <th colspan="3"></th>
  </tr>

<% @laboratories.each do |laboratory| %>
  <tr>
    <td><%= laboratory.number %></td>
    <td><%= laboratory.capacity %></td>
    <td><%= laboratory.floor %></td>
    <td><%= laboratory.numComputers %></td>
    <td><%= laboratory.airConditioning %></td>
    <td><%= laboratory.projector %></td>
    <td><%= laboratory.sound %></td>
    <td><%= link_to 'Show', laboratory %></td>
    <td><%= link_to 'Edit', edit_laboratory_path(laboratory) %></td>
    <td><%= link_to 'Destroy', laboratory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Laboratory', new_laboratory_path, :class => 'btn btn-primary' %>
<br />

<h2>Busqueda de Laboratorios <%= @codigo %></h2>
<%= form_tag :action => 'search' do%>
    <span>Codigo:</span>
    <%= collection_select :codigo_labo, :number, @laboratories, :number, :number %>
    <%= submit_tag 'Buscar', :class => 'btn-small btn-primary' %>
<% end %>
